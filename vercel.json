{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "30",
    "APP_NAME": "CampusHelper",
    "DEBUG": "False",
    "ENVIRONMENT": "production"
  },
  "build": {
    "env": {
      "PYTHONPATH": "."
    }
  },
  "functions": {
    "app/main.py": {
      "maxDuration": 30
    }
  }
}